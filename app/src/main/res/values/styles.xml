<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/padding_4</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CategoryUserText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_8</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxWidth">@dimen/max_category_width</item>
    </style>

    <style name="InfoUserText" parent="CategoryUserText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxWidth">@null</item>
    </style>

    <style name="CategoryRepoText" parent="CategoryUserText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_4</item>
    </style>

    <style name="InfoRepoText" parent="CategoryRepoText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxWidth">@null</item>
    </style>

</resources>